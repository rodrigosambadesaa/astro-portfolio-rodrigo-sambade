<style>
    /* Reset de estilos y estilos básicos */
    body, h1, h2, h3, p, ul, li {
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f5f5f5;
        color: #333;
    }

	#menuNavegacion {
		text-align: right;
	}

    #enlaceLinkedin, #enlaceEmail, #enlaceTelefono, #enlaceContacto, .enlaceNavbar {
        color: #f7fcf8;
    }

    header {
        background-color: #0077b6;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    header h1 {
        font-size: 2.5em;
    }

    header p {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    section {
        background-color: #fff;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        padding: 20px;
    }

	header h2 {
		color: #fff;
	}

    h2 {
        /* font-size: 1.8em; */
        margin-bottom: 10px;
        color: #0077b6;
    }

    ul {
        list-style: disc;
        margin-left: 20px;
        font-size: 1.1em;
    }

    /* Estilos específicos para enlaces */
    a {
        color: #0077b6;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Estilos para la imagen */
    img {
        border-radius: 50%; /* Añade bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Añade sombra suave */
        transition: transform 0.3s ease; /* Añade transición suave al hacer hover */
    }

    img:hover {
        transform: scale(1.05); /* Aumenta ligeramente el tamaño al hacer hover */
    }

	@media only screen and (max-width: 480px) {
		img {
			width: 75%;
		}
	}

</style>
