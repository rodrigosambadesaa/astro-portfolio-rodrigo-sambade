---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto">
	<header tabindex="0">
		<nav style="text-align: right;" tabindex="1">
			<a class="enlaceNavbar" href="../" tabindex="2">Página principal</a>
		</nav>
		<h1 tabindex="2">Portafolio de Rodrigo Sambade Saá</h1>
	</header>
	<main tabindex="3">
		<h1 tabindex="4" id="cabeceraContacto">Contacto</h1>

		<div tabindex="5" id="form-container">
			<form
				method="POST"
				action="https://formsubmit.co/rodrigosambadesaa@gmail.com"
				tabindex="7"
			>
				<fieldset>
					<legend>Datos necesarios</legend>
					<div>
						<label for="name">Nombre</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							aria-label="Nombre"
						/>
					</div>
					<div>
						<label for="email">Correo</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							aria-label="Correo"
						/>
					</div>
					<div>
						<label for="message">Mensaje</label>
						<textarea
							id="message"
							name="message"
							required
							aria-label="Mensaje"
						></textarea>
					</div>
				</fieldset>
				<fieldset>
					<legend>Enviar</legend>
					<input type="submit" value="Enviar"></input>
				</fieldset>
			</form>
		</div>

		<!-- <div class="container">
			<h2>Formulario de Contacto</h2>
			<form action="#" method="post">
				<label for="nombre">Nombre:</label>
				<input type="text" id="nombre" name="nombre" required>
				<label for="email">Email:</label>
				<input type="email" id="email" name="email" required>
				<label for="mensaje">Mensaje:</label>
				<textarea id="mensaje" name="mensaje" rows="4" required></textarea>
				<input type="submit" value="Enviar">
			</form>
		</div> -->
	</main>
</Layout>

<style>
	 /* Reset de estilos y estilos básicos */
	body,
	h1,
	h2,
	h3,
	p,
	ul,
	li {
		margin: 0;
		padding: 0;
	}

	body {
		font-family: Arial, sans-serif;
		line-height: 1.6;
		background-color: #f5f5f5;
		color: #333;
		padding: 20px;
	}

	#menuNavegacion {
		text-align: right;
	}

	#enlaceLinkedin,
	#enlaceContacto {
		color: #f7fcf8;
	}

	.enlaceNavbar {
		color: white;
	}

	header {
		background-color: #0077b6;
		color: #fff;
		padding: 20px;
		text-align: center;
	}

	header h1 {
		font-size: 2.5em;
		color: white;
	}

	header p {
		font-size: 1.2em;
		margin-bottom: 10px;
	}

	section {
		background-color: #fff;
		border: 1px solid #ddd;
		margin-bottom: 20px;
		padding: 20px;
	}

	h1 {
		margin-bottom: 10px;
		color: #0077b6;
	}

	h2 {
		/* font-size: 1.8em; */
		color: #0077b6;
		text-align: center;
		margin-bottom: 30px;
		color: #333;
	}

	ul {
		list-style: disc;
		margin-left: 20px;
		font-size: 1.1em;
	}

	footer {
		background-color: #0077b6;
		color: #fff;
		padding: 10px;
		text-align: center;
		font-size: 1.2em;
	}

	/* Estilos específicos para enlaces */
	a {
		color: #0077b6;
		text-decoration: none;
		cursor: pointer; /* Cambiar el cursor por defecto */
	}

	a:hover {
		text-decoration: underline;
	}

	/* Cambiar el cursor al pasar por encima de los enlaces y la imagen */
	img {
		cursor: pointer;
	}

	/* Cambiar el cursor al pasar por encima */
	img:hover {
		cursor: pointer;
	}
	
	#cabeceraContacto {
		text-align: center;
	}

	fieldset {
		border: none;
	}	

	input[type="submit"]:hover {
		background-color: #005b8a;
	} 

	input[type="submit"] {
		padding: 10px 20px;
		border: none;
		cursor: pointer;
		background-color: #2092bc;
		color: white;
		border-radius: 5px;
		cursor: pointer;
		font-size: 16px;
		transition: background-color 0.3s;
	}

	/* Mateo */
	/* Fuente: https://porfoliomateo.netlify.app/contacto/*/

	form {
		max-width: 400px;
		margin: 0 auto;
	}

	label {
		display: block;
		margin-bottom: 5px;
		font-weight: bold;
		color: #333;
	}

	input[type="text"],
	input[type="email"],
	textarea {
		width: 100%;
		padding: 10px;
		margin-bottom: 20px;
		border: 1px solid #ccc;
		border-radius: 5px;
		box-sizing: border-box;
	}

	textarea {
		resize: vertical;
		height: 100px;
	}

	input[type="submit"]:hover {
		background-color: #2579a9;
	}
</style>
